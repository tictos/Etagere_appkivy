#: import get_color_from_hex kivy.utils.get_color_from_hex
Screen:
    name: "add_projet"

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "add_img.jpg"

    MDIconButton:
        icon: "arrow-left"
        pos_hint: {'center_y': .96}
        on_release: app.back()


    MDLabel:
        id: xx
        text: "Nouveau Projet"
        pos_hint: {"center_x": .45, "center_y": .9}
        font_size: "35sp"
        halign: "center"
    
    MDFloatLayout:
        pos_hint: {"center_x": .5, "center_y": .6}
        size_hint: .8, .08
        md_bg_color: 1, 1, 1, 1
        radius: [25,]
        

        TextInput:
            id: name
            hint_text: "nom du projet"
            background_color: 0, 0, 0, 0
            pos_hint: {"center_x": .5, "center_y": .5}
            padding: 15
            
        
    MDFloatLayout:
        pos_hint: {"center_x": .5, "center_y": .5}
        size_hint: .8, .08
        md_bg_color: 1, 1, 1, 1
        radius: [25,]
        
        TextInput:
            id: date_creation
            hint_text: "date de cr√©ation"
            # icon_right: "calendar"
            pos_hint: {"center_x": .5, "center_y": .5}
            background_color: 0, 0, 0, 0
            padding: 15
            

        MDIconButton:
            icon: "calendar"
            pos_hint: {'right': 1, 'center_y': .5}
            on_release: app.date_dialog()

    MDFloatLayout:
        pos_hint: {"center_x": .5, "center_y": .4}
        size_hint: .8, .08
        md_bg_color: 1, 1, 1, 1
        radius: [25,]
        
        
        TextInput:
            id: capital
            hint_text: "Capital"
            pos_hint: {"center_x": .5, "center_y": .5}
            background_color: 0, 0, 0, 0
            padding: 15
            

   

    MDRoundFlatButton:
        text: "Je me Lance"
        text_color: 0, 1, 0, 1
        size_hint: .8, .09 
        pos_hint: {"center_x": .5, "center_y": .15}
        
        on_release: app.add(name.text, date_creation.text, capital.text)